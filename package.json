{
  "name": "mcp-compara-test-tools",
  "version": "4.0.0",
  "description": "MCP server for executing HTTP requests (curl) and waiting for webhook responses - perfect for async API testing",
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "main": "dist/main.js",
  "bin": {
    "mcp-compara-test-tools": "./dist/main.js",
    "mcp-compara-test-tools-http": "./dist/main-http.js"
  },
  "scripts": {
    "build": "tsc",
    "build:frontend": "cd frontend && pnpm install --ignore-workspace && pnpm run build",
    "build:all": "pnpm run build && pnpm run build:frontend",
    "watch": "tsc --watch",
    "dev:mcp": "tsx src/main.ts",
    "dev:http": "tsx src/main-http.ts",
    "dev:frontend": "cd frontend && pnpm run dev --host",
    "dev": "concurrently \"pnpm run dev:http\" \"pnpm run dev:frontend\"",
    "start:mcp": "node dist/main.js",
    "start:http": "node dist/main-http.js",
    "prepare": "pnpm run build"
  },
  "keywords": [
    "mcp",
    "webhook",
    "testing",
    "e2e",
    "curl",
    "http",
    "async",
    "integration-testing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "better-sqlite3": "^12.6.2",
    "express": "^4.18.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "concurrently": "^9.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
